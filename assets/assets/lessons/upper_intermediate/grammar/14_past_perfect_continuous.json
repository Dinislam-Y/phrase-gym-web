  "theory": {
    "category": "grammar",
    "title": "Past Perfect Continuous",
    "subtitle": "Это время описывает длительное действие, которое происходило до определённого момента в прошлом. Акцент на продолжительности процесса.",
    "construction": {
      "formula": "Subject + had + been + V-ing",
      "rules": [
        {
          "word": "had been + V-ing",
          "description": "Основная формула: I had been waiting (Я ждал). Had been одинаково для всех лиц."
        },
        {
          "word": "for + период",
          "description": "Указывает длительность: had been working for three hours (работал три часа)."
        },
        {
          "word": "since + момент",
          "description": "Указывает начало: had been living there since 2010 (жил там с 2010)."
        },
        {
          "word": "when / before / by the time",
          "description": "Связывает с другим прошлым событием: I had been sleeping when the phone rang."
        },
        {
          "word": "Видимый результат",
          "description": "Объясняет причину состояния: He was tired because he had been running (Он устал, потому что бегал)."
        }
      ]
    },
    "useCases": [
      {
        "icon": "schedule",
        "color": "blue",
        "title": "Длительное действие до момента в прошлом",
        "description": "Процесс, продолжавшийся до определённого события.",
        "example": {
          "english": "I had been waiting for an hour when the bus finally came.",
          "russian": "Я ждал час, когда наконец пришёл автобус."
        }
      },
      {
        "icon": "visibility",
        "color": "orange",
        "title": "Объяснение видимого результата",
        "description": "Почему что-то выглядело определённым образом.",
        "example": {
          "english": "Her eyes were red because she had been crying.",
          "russian": "Её глаза были красными, потому что она плакала."
        }
      },
      {
        "icon": "explore",
        "color": "purple",
        "title": "Продолжительность до прерывания",
        "description": "Действие длилось, пока не было прервано.",
        "example": {
          "english": "We had been driving for five hours before we stopped.",
          "russian": "Мы ехали пять часов, прежде чем остановились."
        }
      }
    ],
    "markers": [
      "for (hours/days/years)",
      "since",
      "all day/morning",
      "when",
      "before",
      "by the time"
    ]
  },
