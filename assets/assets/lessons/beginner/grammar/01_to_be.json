  "theory": {
    "category": "grammar",
    "title": "To Be: Am / Is / Are",
    "subtitle": "Глагол «быть» в настоящем времени. В русском мы его опускаем, а в английском — никогда.",
    "construction": {
      "formula": "Subject + am/is/are",
      "rules": [
        {
          "word": "I → am",
          "description": "I am happy. (Я счастлив.) — только с I."
        },
        {
          "word": "He / She / It → is",
          "description": "He is tall. (Он высокий.) She is smart. (Она умная.) It is cold. (Холодно.)"
        },
        {
          "word": "We / You / They → are",
          "description": "We are friends. (Мы друзья.) You are right. (Ты прав.) They are busy. (Они заняты.)"
        },
        {
          "word": "Отрицание",
          "description": "Добавляем not после am/is/are: I am not tired. He is not here. They are not ready."
        }
      ]
    },
    "useCases": [
      {
        "icon": "groups",
        "color": "blue",
        "title": "Кто ты / кто он",
        "description": "Профессия, роль, статус.",
        "example": {
          "english": "I am a student.",
          "russian": "Я студент."
        }
      },
      {
        "icon": "favorite",
        "color": "orange",
        "title": "Какой ты / как себя чувствуешь",
        "description": "Настроение, состояние, характер.",
        "example": {
          "english": "She is happy.",
          "russian": "Она счастлива."
        }
      },
      {
        "icon": "explore",
        "color": "green",
        "title": "Где ты находишься",
        "description": "Местоположение.",
        "example": {
          "english": "We are here.",
          "russian": "Мы здесь."
        }
      }
    ],
    "markers": [
      "am",
      "is",
      "are",
      "not"
    ]
  },
