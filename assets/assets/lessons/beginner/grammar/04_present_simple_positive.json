  "theory": {
    "category": "grammar",
    "title": "Present Simple",
    "subtitle": "Самое простое время. Используем для фактов, привычек и того, что происходит регулярно.",
    "construction": {
      "formula": "Кто + Глагол (+s)",
      "rules": [
        {
          "word": "I / You / We / They",
          "description": "Глагол не меняется: I like, You work."
        },
        {
          "word": "He / She / It",
          "description": "Добавляем -s к глаголу: He likes, She works."
        },
        {
          "word": "Отрицание (No)",
          "description": "I don't know (Я не знаю), She doesn't know (Она не знает)."
        },
        {
          "word": "Вопрос (?)",
          "description": "Do you work? (Ты работаешь?), Does he work? (Он работает?)."
        }
      ]
    },
    "useCases": [
      {
        "icon": "favorite",
        "color": "orange",
        "title": "Факты и вкусы",
        "description": "То, что вы любите, знаете или хотите.",
        "example": {
          "english": "I like pizza.",
          "russian": "Я люблю пиццу."
        }
      },
      {
        "icon": "schedule",
        "color": "blue",
        "title": "Регулярные действия",
        "description": "То, что происходит часто, обычно или всегда.",
        "example": {
          "english": "I often read.",
          "russian": "Я часто читаю."
        }
      }
    ],
    "markers": [
      "always",
      "usually",
      "often",
      "sometimes",
      "every day"
    ]
  },
