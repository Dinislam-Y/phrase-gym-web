  "theory": {
    "category": "grammar",
    "title": "Adverbs of Frequency",
    "subtitle": "Эти слова показывают, КАК ЧАСТО что-то происходит. Они стоят ПЕРЕД основным глаголом, но ПОСЛЕ глагола be.",
    "construction": {
      "formula": "S + adverb + V (или S + be + adverb)",
      "rules": [
        {
          "word": "Перед глаголом",
          "description": "I always drink coffee. She never eats meat. He often reads."
        },
        {
          "word": "После be",
          "description": "She is always happy. He is never late. They are usually here."
        },
        {
          "word": "Шкала частоты",
          "description": "always (100%) > usually (80%) > often (60%) > sometimes (40%) > rarely (10%) > never (0%)"
        },
        {
          "word": "never = отрицание",
          "description": "Never уже содержит отрицание. НЕ говорим: She doesn't never eat. Говорим: She never eats."
        }
      ]
    },
    "useCases": [
      {
        "icon": "schedule",
        "color": "blue",
        "title": "Привычки и рутина",
        "description": "Рассказываем, что делаем регулярно.",
        "example": {
          "english": "I always drink coffee.",
          "russian": "Я всегда пью кофе."
        }
      },
      {
        "icon": "check_circle",
        "color": "purple",
        "title": "Характеристики",
        "description": "Описываем людей через их типичное поведение.",
        "example": {
          "english": "He is never late.",
          "russian": "Он никогда не опаздывает."
        }
      },
      {
        "icon": "bolt",
        "color": "orange",
        "title": "Запреты и ограничения",
        "description": "Говорим о том, чего не делаем.",
        "example": {
          "english": "She never eats meat.",
          "russian": "Она никогда не ест мясо."
        }
      }
    ],
    "markers": [
      "always",
      "usually",
      "often",
      "sometimes",
      "rarely",
      "never"
    ]
  },
