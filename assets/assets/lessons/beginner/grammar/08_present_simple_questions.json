  "theory": {
    "category": "grammar",
    "title": "Present Simple: Questions",
    "subtitle": "Чтобы задать вопрос в Present Simple, нужен помощник — Do или Does. Без него вопрос не получится.",
    "construction": {
      "formula": "Do/Does + S + V1?",
      "rules": [
        {
          "word": "Do",
          "description": "Используем с I, you, we, they: Do you like coffee?"
        },
        {
          "word": "Does",
          "description": "Используем с he, she, it: Does she work here?"
        },
        {
          "word": "V1 (без -s!)",
          "description": "После Does глагол БЕЗ окончания -s: Does he like (НЕ likes!)."
        },
        {
          "word": "Порядок слов",
          "description": "Помощник → подлежащее → глагол: Do you speak English?"
        }
      ]
    },
    "useCases": [
      {
        "icon": "waving_hand",
        "color": "blue",
        "title": "Знакомство",
        "description": "Спрашиваем о привычках и предпочтениях нового человека.",
        "example": {
          "english": "Do you speak English?",
          "russian": "Вы говорите по-английски?"
        }
      },
      {
        "icon": "explore",
        "color": "purple",
        "title": "Уточнение фактов",
        "description": "Проверяем информацию: работает ли, живёт ли, знает ли.",
        "example": {
          "english": "Does she live here?",
          "russian": "Она живёт здесь?"
        }
      },
      {
        "icon": "favorite",
        "color": "orange",
        "title": "Вкусы и предпочтения",
        "description": "Спрашиваем, что человек любит или хочет.",
        "example": {
          "english": "Do you like music?",
          "russian": "Тебе нравится музыка?"
        }
      }
    ],
    "markers": [
      "do",
      "does",
      "every day",
      "usually",
      "often",
      "always"
    ]
  },
