  "theory": {
    "category": "grammar",
    "title": "Adverbs",
    "subtitle": "Если Глагол — это мотор, то Наречие — это педаль газа или тормоза. Оно объясняет, КАК именно работает мотор. Отвечает на вопросы: Как? Где? Когда? Насколько?",
    "construction": {
      "formula": "Adjective + -ly (обычно)",
      "rules": [
        {
          "word": "Как? (Manner)",
          "description": "Quick -> Quickly (Быстро). Easy -> Easily (Легко). Стоят после глагола."
        },
        {
          "word": "Где/Когда? (Place/Time)",
          "description": "Here, There, Now, Yesterday. Определяют место и время."
        },
        {
          "word": "Насколько? (Degree)",
          "description": "Very, Too, Enough. Усиливают или ослабляют значение. (Very good)."
        },
        {
          "word": "Исключения",
          "description": "Good -> Well (Хорошо). Fast -> Fast (Быстро). Hard -> Hard (Усердно)."
        }
      ]
    },
    "useCases": [
      {
        "icon": "bolt",
        "color": "blue",
        "title": "Скорость и Манера",
        "description": "He runs FAST. She sings BEAUTIFULLY.",
        "example": {
          "english": "Please speak slowly.",
          "russian": "Пожалуйста, говорите медленно."
        }
      },
      {
        "icon": "schedule",
        "color": "green",
        "title": "Частота (Frequency)",
        "description": "Always, Never, Sometimes. Стоят ПЕРЕД глаголом (I always sleep).",
        "example": {
          "english": "I never lie.",
          "russian": "Я никогда не лгу."
        }
      },
      {
        "icon": "visibility",
        "color": "orange",
        "title": "Усилители (Intensifiers)",
        "description": "Very, Really, Extremely. Делают признак сильнее.",
        "example": {
          "english": "It is extremely dangerous.",
          "russian": "Это чрезвычайно опасно."
        }
      }
    ],
    "markers": [
      "quickly",
      "slowly",
      "well",
      "fast",
      "hard",
      "always",
      "never",
      "often",
      "very",
      "really"
    ]
  },
